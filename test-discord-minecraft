#!/bin/bash

trap "kill -SIGINT $(ps -ef | grep "docker logs -f discord-minecraft" | awk '{print $2}' | head -1)" SIGINT

docker build -t p0rt23/discord-minecraft . &&\
docker run -d --network="elastic" --name="discord-minecraft"  p0rt23/discord-minecraft &&\
docker logs -f discord-minecraft

docker stop discord-minecraft &&\
docker rm discord-minecraft
